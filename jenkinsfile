pipeline {
    agent any
    tools {
        maven 'Maven-3.8.1'  // Assurez-vous que Maven est installé sur Jenkins
    }
    environment {
        JAVA_HOME = '/usr/lib/jvm/java-11-openjdk'  // Spécifie la version de Java
    }
    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/tahaelbekkaye/projet_Jenkins.git'  // URL de ton repo GitHub
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean install'  // Exécute Maven pour construire le projet
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'  // Exécute les tests unitaires avec Maven
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying to server...'  // Ajoute ta logique de déploiement ici
            }
        }
    }
    post {
        always {
            echo 'Pipeline finished!'
        }
    }
}
