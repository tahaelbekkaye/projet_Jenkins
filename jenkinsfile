pipeline {
    agent any
    tools {
        maven 'Maven'  // Utilise la configuration par défaut ou celle configurée dans Jenkins
    }
    environment {
        JAVA_HOME = '/usr/lib/jvm/java-11-openjdk'
    }
    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/tahaelbekkaye/projet_Jenkins.git'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying to server...'
            }
        }
    }
    post {
        always {
            echo 'Pipeline finished!'
        }
    }
}
